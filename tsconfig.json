{
    "compilerOptions": {
        "target": "ES6",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
       
        "allowImportingTsExtensions": true,
        "noEmit": true, 
        "skipLibCheck": true,
        "typeRoots": ["types", ".node_modules?@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
